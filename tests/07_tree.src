
let triangle := func size {
	let k := 2 * size + 1 - 2;
	
	for i in range size + 1 {
		for j in range k {
			print(" ");
		}
		
		k := k - 1;
		
		for j in range i {
			print("* ");
		}
		println("");
	}
};

